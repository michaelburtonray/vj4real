<h1><a href="/">vj4real</a></h1>

<div id="player">

  <div id="player-stage">
    <div id="player-left"></div>
    <div id="player-right"></div>
  </div>

  <form id="controls">

    <div class="one col">
      <label for="video_left">Video left (youtube URL)</label>
      <input type="text" name="video_left" value="<%= @video_left %>" placeholder="http://www.youtube.com/watch?v=T-sxSd1uwoU">
    </div>

    <div class="one col">
        <label for="video_right">Video right (youtube URL)</label>
        <input type="text" name="video_right" value="<%= @video_right %>" placeholder="http://www.youtube.com/watch?v=0V38hAK0C_g">
    </div>

    <div class="two cols">

      <label for="crossfade audio">Audio Crossfade</label>
      <input name="audio_crossfade" type="range" id="crossfade_audio" min="0" value="<%= @audio_crossfade %>" max="100">

      <label for="crossfade_video">Video Crossfade</label>
      <input name="video_crossfade" type="range" id="crossfade_video" min="0" value="<%= @video_crossfade %>" max="100">

      <input type="submit" value="save">

    </div>

  </form>

</div>